<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD700"
    tools:context="com.iics.ust.espinosa_labexercise01.FirstActivity">

    <Button
        android:id="@+id/btnCompute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp"
        android:background="@android:color/black"
        android:onClick="toSecondActivity"
        android:text="PRESS COMPUTE"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/textView_quiz1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="35dp"
        android:text="Quiz1"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_quiz2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView_quiz1"
        android:layout_alignRight="@+id/textView_quiz1"
        android:layout_below="@+id/textView_quiz1"
        android:layout_marginTop="22dp"
        android:text="Quiz 2"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_seatworks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView_quiz2"
        android:layout_alignRight="@+id/textView_quiz2"
        android:layout_below="@+id/textView_quiz2"
        android:layout_marginTop="22dp"
        android:text="Seatworks"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_labExercises"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView_seatworks"
        android:layout_alignRight="@+id/textView_seatworks"
        android:layout_below="@+id/textView_seatworks"
        android:layout_marginTop="22dp"
        android:text="Lab Exercises"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_majorExam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView_labExercises"
        android:layout_alignRight="@+id/textView_labExercises"
        android:layout_below="@+id/textView_labExercises"
        android:layout_marginTop="22dp"
        android:text="Major Exam"
        android:textSize="25sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/editText_quiz1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_quiz1"
        android:layout_alignBottom="@+id/textView_quiz1"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toRightOf="@+id/textView_quiz1"
        android:ems="5"
        android:inputType="number|numberDecimal" />

    <EditText
        android:id="@+id/editText_quiz2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_quiz2"
        android:layout_alignBottom="@+id/textView_quiz2"
        android:layout_alignLeft="@+id/editText_quiz1"
        android:layout_alignStart="@+id/editText_quiz1"
        android:ems="5"
        android:inputType="number|numberDecimal" />

    <EditText
        android:id="@+id/editText_seatworks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_seatworks"
        android:layout_alignBottom="@+id/textView_seatworks"
        android:layout_alignLeft="@+id/editText_labExercises"
        android:layout_alignStart="@+id/editText_labExercises"
        android:ems="5"
        android:inputType="number|numberDecimal" />

    <EditText
        android:id="@+id/editText_labExercises"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_labExercises"
        android:layout_alignBottom="@+id/textView_labExercises"
        android:layout_alignLeft="@+id/editText_majorExam"
        android:layout_alignStart="@+id/editText_majorExam"
        android:ems="5"
        android:inputType="number|numberDecimal" />

    <EditText
        android:id="@+id/editText_majorExam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_majorExam"
        android:layout_alignBottom="@+id/textView_majorExam"
        android:layout_alignLeft="@+id/editText_quiz2"
        android:layout_alignStart="@+id/editText_quiz2"
        android:ems="5"
        android:inputType="number|numberDecimal" />

</RelativeLayout>
